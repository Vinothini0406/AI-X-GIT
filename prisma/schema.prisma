generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String     @id @default(cuid())
  name      String
  createdAt DateTime   @default(now())
  updatedAt DateTime
  Question  Question[]
  Project   Project[]
  Payment   Payment[]
  Invoice   Invoice[]
}

model Project {
  id            String     @id @default(cuid())
  name          String
  githubUrl     String?
  documentation String?
  mermaidGraph  String?
  createdAt     DateTime   @default(now())
  updatedAt     DateTime   @updatedAt
  Commit        Commit[]
  Meeting       Meeting[]
  Question      Question[]
  User          User[]
  Payment       Payment[]
  Invoice       Invoice[]
}

model Commit {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  projectId String

  project Project @relation(fields: [projectId], references: [id])

  commitMessage      String
  commitHash         String
  commitAuthorName   String
  commitAuthorAvatar String
  commitDate         DateTime
  summary            String
}

model Issue {
  id        String   @id
  start     String
  end       String
  gist      String
  headline  String
  summary   String
  meetingId String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Meeting   Meeting  @relation(fields: [meetingId], references: [id])
}

model Meeting {
  id        String   @id
  name      String
  url       String
  projectId String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Issue     Issue[]
  Project   Project  @relation(fields: [projectId], references: [id])
}

model Question {
  id        String   @id
  question  String
  answer    String
  projectId String
  userId    String
  createdAt DateTime @default(now())
  updatedAt DateTime
  Project   Project  @relation(fields: [projectId], references: [id])
  User      User     @relation(fields: [userId], references: [id])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
}

enum InvoiceStatus {
  PAID
  VOID
}

model Payment {
  id            String        @id @default(cuid())
  userId        String
  projectId     String?
  planName      String
  amountInPaise Int
  currency      String        @default("INR")
  status        PaymentStatus @default(PENDING)
  providerRef   String?
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Invoice       Invoice?
  Project       Project?      @relation(fields: [projectId], references: [id])
  User          User          @relation(fields: [userId], references: [id])
}

model Invoice {
  id            String        @id @default(cuid())
  invoiceNumber String        @unique
  userId        String
  projectId     String?
  paymentId     String        @unique
  amountInPaise Int
  currency      String        @default("INR")
  status        InvoiceStatus @default(PAID)
  issuedAt      DateTime      @default(now())
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  Payment       Payment       @relation(fields: [paymentId], references: [id])
  Project       Project?      @relation(fields: [projectId], references: [id])
  User          User          @relation(fields: [userId], references: [id])

  @@index([userId, issuedAt])
  @@index([projectId, issuedAt])
}
